<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapper.TuserMapper">
	<select id="findTuserList" 
		resultType="Tuser">
		select * from tuser 
	</select>
	
	<select id="query" parameterType="java.util.Map" resultType="Tuser">
		select * from tuser  
		<where>
			<if test="id!=null and id!=0">
			   and id= #{id}
			</if>
			
			<if test="username!=null and username!=''">
			   and username= #{username}
			</if>
			
			<if test="userpw!=null and userpw!=''">
			   and userpw= #{userpw}
			</if>
			
			<if test="utype!=null">
			   and utype= #{utype}
			</if>
		</where>
	</select>
	
	
	<select id="queryTuserById" parameterType="int" resultType="Tuser">
		select * from tuser where id=${value}
	</select>
 


	<insert id="insertTuser" useGeneratedKeys="true" keyProperty="id" parameterType="Tuser">
		insert into tuser
		(username,userpw,usertype,userrealname,useraddress,usersex,usertel,useremail,userqq,userman,userage,userbirthday,userxueli,utype)
		values
		(#{username},#{userpw},#{usertype},#{userrealname},#{useraddress},#{usersex},#{usertel},#{useremail},#{userqq},#{userman},#{userage},#{userbirthday},#{userxueli},#{utype});
	</insert>
 
	
  
 
 
 
 
 
 
 
 
 
 
 
 
 
 



	<update id="updateTuser" parameterType="Tuser" >
		update tuser set
		username=#{username},userpw=#{userpw},usertype=#{usertype},userrealname=#{userrealname},useraddress=#{useraddress},usersex=#{usersex},usertel=#{usertel},useremail=#{useremail},userqq=#{userqq},userman=#{userman},userage=#{userage},userbirthday=#{userbirthday},userxueli=#{userxueli},utype=#{utype}
		where
		id=#{id}	
	</update>
	
 
	
	<delete id="deleteTuser" parameterType="int">
	    delete from  tuser where id=${value}
	</delete>

</mapper>

 