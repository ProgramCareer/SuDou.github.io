<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapper.YuyueMapper">
	<select id="findYuyueList" 
		resultType="Yuyue">
		select * from yuyue 
	</select>
	
	<select id="query" parameterType="java.util.Map" resultType="Yuyue">
		select * from yuyue  
		<where>
			<if test="id!=null and id!=0">
			   and id= #{id}
			</if>
			
			<if test="tid!=null and tid!=0">
			   and tid= #{tid}
			</if>
			<if test="uid!=null and uid!=0">
			   and uid= #{uid}
			</if>
		</where>
	</select>
	
	
	<select id="queryYuyueById" parameterType="int" resultType="Yuyue">
		select * from yuyue where id=${value}
	</select>
 


	<insert id="insertYuyue" useGeneratedKeys="true" keyProperty="id" parameterType="Yuyue">
		insert into yuyue
		(uname,tel,yysj,xdsj,remark,state,tid,tname,uid)
		values
		(#{uname},#{tel},#{yysj},#{xdsj},#{remark},#{state},#{tid},#{tname},#{uid});
	</insert>
 
	
  
 
 
 
 
 
 
 
 
 



	<update id="updateYuyue" parameterType="Yuyue" >
		update yuyue set
		uname=#{uname},tel=#{tel},yysj=#{yysj},xdsj=#{xdsj},remark=#{remark},state=#{state},tid=#{tid},tname=#{tname},uid=#{uid}
		where
		id=#{id}	
	</update>
	
 
	
	<delete id="deleteYuyue" parameterType="int">
	    delete from  yuyue where id=${value}
	</delete>

</mapper>

 