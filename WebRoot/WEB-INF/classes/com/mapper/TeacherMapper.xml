<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapper.TeacherMapper">
	<select id="findTeacherList" 
		resultType="Teacher">
		select * from teacher 
	</select>
	
	<select id="query" parameterType="java.util.Map" resultType="Teacher">
		select * from teacher  
		<where>
			<if test="id!=null and id!=0">
			   and id= #{id}
			</if>
		</where>
	</select>
	
	
	<select id="queryTeacherById" parameterType="int" resultType="Teacher">
		select * from teacher where id=${value}
	</select>
 


	<insert id="insertTeacher" useGeneratedKeys="true" keyProperty="id" parameterType="Teacher">
		insert into teacher
		(name,sex,age,tel,jingyan,fdkm,skfs,grjj,pwd,fujian)
		values
		(#{name},#{sex},#{age},#{tel},#{jingyan},#{fdkm},#{skfs},#{grjj},#{pwd},#{fujian});
	</insert>
 
	
  
 
 
 
 
 
 
 
 
 
 



	<update id="updateTeacher" parameterType="Teacher" >
		update teacher set
		name=#{name},sex=#{sex},age=#{age},tel=#{tel},jingyan=#{jingyan},fdkm=#{fdkm},skfs=#{skfs},grjj=#{grjj},pwd=#{pwd},fujian=#{fujian}
		where
		id=#{id}	
	</update>
	
 
	
	<delete id="deleteTeacher" parameterType="int">
	    delete from  teacher where id=${value}
	</delete>

</mapper>

 