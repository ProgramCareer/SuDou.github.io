<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="certificate.Certificate">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="1920px"
        android:layout_height="160px"
        android:layout_marginStart="0px"
        android:layout_marginTop="0px"
        android:background="#07426a"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="62px"
            android:layout_height="53px"
            android:layout_marginStart="81px"
            android:scaleType="fitXY"
            android:background="#07426a"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_fanhui" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="SourceHanSansCN-Medium"
            android:gravity="center"
            android:text="证明开具"
            android:textColor="#ffffff"
            android:textSize="60px"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/linearLayout2"
        android:layout_width="599px"
        android:layout_height="920px"
        android:layout_below="@+id/linearLayout"
        android:layout_marginStart="0px"
        android:layout_marginTop="0px"
        android:background="#ffffff"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="599px"
            android:layout_height="920px"
            android:layout_marginStart="0px"
            android:layout_marginTop="0px"
            android:background="#ffffff"
            android:orientation="vertical">

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:textColor="#07426a"
                android:textSize="40px"
                android:background="@drawable/selector_test"
                android:fontFamily="FZLTHK--GBK1-0"
                android:text="《资源税管理证明》开具" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:textColor="#07426a"
                android:textSize="40px"
                android:background="@drawable/selector_test"
                android:fontFamily="FZLTHK--GBK1-0"
                android:text="申请开具社会保险费缴费证明" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:textColor="#07426a"
                android:textSize="40px"
                android:background="@drawable/selector_test"
                android:fontFamily="FZLTHK--GBK1-0"
                android:text="开具个人所得税完税证明" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:textColor="#07426a"
                android:textSize="40px"
                android:background="@drawable/selector_test"
                android:fontFamily="FZLTHK--GBK1-0"
                android:text="《车辆购置税完税证明》补办" />
            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:textColor="#07426a"
                android:textSize="40px"
                android:background="@drawable/selector_test"
                android:fontFamily="FZLTHK--GBK1-0"
                android:text="丢失增值税专用发票已报税证明单开具" />
            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:textColor="#07426a"
                android:textSize="40px"
                android:background="@drawable/selector_test"
                android:fontFamily="FZLTHK--GBK1-0"
                android:text="《中国税收居民身份证明》开具" />
            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:textColor="#07426a"
                android:textSize="40px"
                android:background="@drawable/selector_test"
                android:fontFamily="FZLTHK--GBK1-0"
                android:text="完税凭证换开、重开" />
            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:textColor="#07426a"
                android:textSize="40px"
                android:background="@drawable/selector_test"
                android:fontFamily="FZLTHK--GBK1-0"
                android:text="完税证明开具" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="1321px"
        android:layout_height="920px"
        android:layout_below="@+id/linearLayout"
        android:layout_marginStart="0px"
        android:layout_marginTop="0px"
        android:layout_toEndOf="@+id/linearLayout2"
        android:background="#ececec"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="1321px"
            android:layout_height="550px"
            android:fadeScrollbars="false"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:scrollbars="none"
            android:text=""
            android:textColor="#000000"
            android:textSize="40px" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="224px"
            android:layout_height="224px"
            android:layout_marginStart="555px"
            android:layout_marginTop="0px"
            android:background="#ececec"
            android:scaleType="fitXY"
            android:src="@drawable/icon_quhao" />
    </LinearLayout>
</RelativeLayout>