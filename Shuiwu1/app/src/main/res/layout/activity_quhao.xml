<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="quhao.Quhao">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="1920px"
        android:layout_height="160px"
        android:layout_marginStart="0px"
        android:layout_marginTop="0px"
        android:background="#07426a"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="62px"
            android:layout_height="53px"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="81px"
            android:background="#07426a"
            android:scaleType="fitXY"
            android:src="@drawable/icon_fanhui" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="SourceHanSansCN-Medium"
            android:gravity="center"
            android:text="取号办理"
            android:textColor="#ffffff"
            android:textSize="60px"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_below="@+id/linearLayout"
        android:layout_height="112px"
        android:layout_marginTop="0px"
        android:background="#ececec"
        android:orientation="horizontal">

        <TextView
            android:layout_width="300px"
            android:layout_height="50px"
            android:layout_marginStart="100px"
            android:layout_marginTop="62px"
            android:fontFamily="SourceHanSansCN-Medium"
            android:includeFontPadding="false"
            android:text="请选择业务"
            android:textColor="#444444"
            android:textSize="50px"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_below="@+id/linearLayout4"
        android:layout_marginStart="0px"
        android:layout_marginTop="0px"
        android:background="#ececec"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button"
            android:layout_width="280px"
            android:layout_height="120px"
            android:layout_marginStart="91px"
            android:layout_marginTop="40px"
            android:textSize="48px"
            android:fontFamily="SourceHanSansCN-Medium"
            android:textColor="@drawable/buttontextselector"
            android:background="@drawable/buttonselector"
            android:text="税收办理"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="280px"
            android:layout_height="120px"
            android:layout_marginStart="50px"
            android:layout_marginTop="40px"
            android:textSize="48px"
            android:fontFamily="SourceHanSansCN-Medium"
            android:textColor="@drawable/buttontextselector"
            android:background="@drawable/buttonselector"
            android:text="税收证明"
            />

        <Button
            android:id="@+id/button3"
            android:layout_width="280px"
            android:layout_height="120px"
            android:layout_marginStart="50px"
            android:layout_marginTop="40px"
            android:textSize="48px"
            android:fontFamily="SourceHanSansCN-Medium"
            android:textColor="@drawable/buttontextselector"
            android:background="@drawable/buttonselector"
            android:text="申报退税"
            />
        <Button
            android:id="@+id/button4"
            android:layout_width="280px"
            android:layout_height="120px"
            android:layout_marginStart="50px"
            android:layout_marginTop="40px"
            android:textSize="48px"
            android:fontFamily="SourceHanSansCN-Medium"
            android:textColor="@drawable/buttontextselector"
            android:background="@drawable/buttonselector"
            android:text="发票开具"
            />
        <Button
            android:id="@+id/button5"
            android:layout_width="280px"
            android:layout_height="120px"
            android:layout_marginStart="50px"
            android:layout_marginTop="40px"
            android:textSize="48px"
            android:fontFamily="SourceHanSansCN-Medium"
            android:textColor="@drawable/buttontextselector"
            android:background="@drawable/buttonselector"
            android:text="登记办理"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700px"
        android:layout_below="@+id/linearLayout5"
        android:layout_marginStart="0px"
        android:layout_marginTop="0px"
        android:background="#ececec"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button6"
            android:layout_width="280px"
            android:layout_height="120px"
            android:layout_marginStart="91px"
            android:layout_marginTop="40px"
            android:background="@drawable/buttonselector"
            android:fontFamily="SourceHanSansCN-Medium"
            android:text="税收证明"
            android:textColor="@drawable/buttontextselector"
            android:textSize="48px" />

    </LinearLayout>
</RelativeLayout>